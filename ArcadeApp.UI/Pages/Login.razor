@page "/login"
@using System.ComponentModel.DataAnnotations

@inject ArcadeApp.Core.Services.Auth.IAuthService AuthService
@inject AuthState AuthState
@inject NavigationManager Nav

<h3>Login</h3>

<EditForm Model="_model" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>E-Mail</label><br />
        <InputText @bind-Value="_model.Email" />
    </div>

    <div>
        <label>Passwort</label><br />
        <InputText @bind-Value="_model.Password" type="password" />
    </div>

    <button type="submit">Anmelden</button>

    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <p style="color:red">@_error</p>
    }
</EditForm>

@code {
    private LoginModel _model = new();
    private string? _error;

    private async Task HandleLogin()
    {
        _error = null;

        var result = await AuthService.LoginAsync(
            new ArcadeApp.Core.Models.Auth.LoginRequest
            {
                Email = _model.Email,
                Password = _model.Password
            });

        if (!result.Success || result.User is null)
        {
            _error = result.Error ?? "Login fehlgeschlagen.";
            return;
        }

        AuthState.SignIn(result.User);
        Nav.NavigateTo("/");
    }

    private sealed class LoginModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}
