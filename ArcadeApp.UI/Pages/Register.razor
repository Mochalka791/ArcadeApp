    private async Task HandleRegister()
    {
        _error = null;

        if (_model.Password != _model.PasswordRepeat)
        {
            _error = "Passwörter stimmen nicht überein.";
            return;
        }

        var result = await AuthService.RegisterAsync(
            new ArcadeApp.Core.Models.Auth.RegisterRequest
            {
                Email = _model.Email,
                Password = _model.Password,
                PasswordRepeat = _model.PasswordRepeat
            });

        if (!result.Success || result.User is null)
        {
            _error = result.Error ?? "Registrierung fehlgeschlagen.";
            return;
        }

        AuthState.SignIn(result.User);
        Nav.NavigateTo("/");
    }
